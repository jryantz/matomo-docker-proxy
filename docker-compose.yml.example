version: '3'

services:
  web:
    # image: nginxinc/nginx-unprivileged:1.20-alpine
    image: nginx:alpine
    restart: always
    networks:
      - proxy
    ports:
      - 8080:80
    volumes:
      - matomo:/var/www/html:ro
      - ./matomo.conf:/etc/nginx/conf.d/default.conf:ro
    environment:
      - VIRTUAL_HOST=
      - LETSENCRYPT_HOST=
      - LETSENCRYPT_EMAIL=

  app:
    image: matomo:4.5-fpm-alpine
    restart: always
    depends_on:
      - db
    volumes:
      # - ./config:/var/www/html/config:rw
      # - ./logs:/var/www/html/logs
      - matomo:/var/www/html
    environment:
      - MATOMO_DATABASE_HOST=db
    env_file:
      - ./db.env

  db:
    image: mariadb:10.6
    command: --max-allowed-packet=64MB
    restart: always
    volumes:
      - db:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD=CREATE_PASSWORD_1
    env_file:
      - ./db.env

volumes:
  db:
  matomo:

networks:
  proxy: 
    external:
      name: nginx-proxy